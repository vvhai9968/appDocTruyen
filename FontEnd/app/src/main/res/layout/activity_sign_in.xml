<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/anime"
            />

        <LinearLayout
            android:layout_marginBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chào mừng đến với"
                android:textColor="#223263"
                android:textStyle="bold"
                android:textSize="19dp"/>
            <TextView
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thế giới Anime"
                android:textColor="#223263"
                android:textStyle="bold"
                android:textSize="19dp"/>
        </LinearLayout>

        <TextView
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập để tiếp tục "
            android:textSize="15dp"
            android:textColor="#9098B1"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/checkUserSignIn"
            android:layout_width="343dp"
            android:layout_height="63.5dp"
            app:errorEnabled="true"
            android:layout_margin="7dp"
            android:hint="User"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#A39B9B"
            app:endIconMode="clear_text"
            app:hintTextColor="#777676"
            app:startIconDrawable="@drawable/name">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/signInUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebEmailAddress|textPersonName"
                android:paddingBottom="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/checkpassSignIn"
            android:layout_width="343dp"
            android:layout_height="63.5dp"
            android:layout_marginBottom="8dp"
            android:hint="Password"
            app:errorEnabled="true"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#A39B9B"
            app:endIconMode="password_toggle"
            app:endIconTint="#9A9897"
            app:hintTextColor="#777676"
            app:startIconDrawable="@drawable/password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signInPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingBottom="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginLeft="35dp"
            android:id="@+id/signinNotification"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="16dp"

            />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="8dp"
            android:layout_width="343dp"
            android:layout_height="48dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/SignIn">
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="343dp"
                android:layout_height="48dp"
                android:textSize="16dp"
                android:text="Đăng nhập"
                android:textColor="@color/white"
                android:background="@color/black"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="#9098B1"
            android:textSize="14dp"
            />

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/dangnhapgg"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:layout_width="343dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google"/>
                <TextView
                    android:layout_width="277dp"
                    android:layout_height="25dp"
                    android:text="Đăng nhập bằng Google"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#9098B1"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dangnhapfb"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:layout_width="343dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/facebook"/>
                <TextView
                    android:layout_width="277dp"
                    android:layout_height="25dp"
                    android:text="Đăng nhập bằng Facebook"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#9098B1"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtQuen"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17dp"

            />

        <LinearLayout

            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bạn là người mới? "
                android:textSize="17dp" />
            <TextView
                android:id="@+id/txtSignUp"
                android:padding="0.5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>